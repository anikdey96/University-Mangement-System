@model IEnumerable<DatabaseAccess.AttendanceTable>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Student Attendance View", "Create", null, new { @class = "btn btn-success" })

</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Student Attendance</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-condensed" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            StudentID
                        </th>
                        <th>
                            Student Name
                        </th>
                        <th>
                            Class
                        </th>
                        <th>
                            Attend Date
                        </th>
                        <th>
                            Attend Time
                        </th>

                        @*<th>
                            Session
                        </th>*@
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentTable.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassTable.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttendDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttendTime)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.SessionTable.Name)
                        </td>*@
                     

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.AttendanceID })
                            @Html.ActionLink("Details", "Details", new { id = item.AttendanceID })
                            @Html.ActionLink("Delete", "Delete", new { id = item.AttendanceID })
                        </td>
                    </tr>
                    }


                </tbody>

            </table>
        </div>
    </div>
</div>